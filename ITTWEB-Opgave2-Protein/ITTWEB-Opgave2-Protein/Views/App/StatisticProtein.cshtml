<h2>Statistics</h2>

<div class="row margin-top-5">
    <div class="col-md-12">
        <label>Start date:</label>
        <input class="form-control medium" id="startTimePicker" type="date" ng-model="time" ng-change="getStatistic(time)"/>
    </div>
</div>
<div class="row margin-top-5">
    <div class="col-md-12">
        <table class="table">
            <tr ng-show="rawData.length > 0">
                <th>Date</th>
                <th>Total protein intake</th>
                <th>Daily recomended intake</th>
                <th>Percentage</th>
                <th>Protein left</th>
            </tr>
            <tr ng-repeat="days in rawData">
                <td>
                    <div class="small">{{days.summary.date}}</div>
                </td>
                <td>
                    <div class="small">{{days.summary.total}} g</div>
                </td>
                <td>
                    <div class="small">{{days.summary.daily}} g</div>
                </td>
                <td>
                    <div class="small">{{days.summary.percentage}} %</div>
                </td>
                <td>
                    <div class="small">{{days.summary.left}} g</div>
                </td>
            </tr>
        </table>
        
        <table class="table" ng-show="rawData">
            <tr>
                <th>Date</th>
                <th>Total protein intake</th>
                <th>Daily recomended intake</th>
                <th>Percentage</th>
                <th>Protein left</th>
            </tr>
            <tr ng-model="average">
                <td>
                    <div class="small">Week</div>
                </td>
                <td>
                    <div class="small">{{average.total}} g</div>
                </td>
                <td>
                    <div class="small">{{average.daily}} g</div>
                </td>
                <td>
                    <div class="small">{{average.percentage}} %</div>
                </td>
                <td>
                    <div class="small">{{average.left}} g</div>
                </td>
            </tr>
        </table>
    </div>
</div>