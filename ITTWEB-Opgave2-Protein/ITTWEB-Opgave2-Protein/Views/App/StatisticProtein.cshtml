<h2>Statistics</h2>

<div class="row margin-top-5">
    <div class="col-md-12">
        <label>Start date:</label>
        <input type="date" ng-model="Time" ng-change="getStatistic(Time)" min="2014-01-01" max="2100-01-01" />
    </div>
    <div></div>
</div>
<div class="row margin-top-5">
    <div class="col-md-12">
        <table class="table">
            <tr>
                <th>Date</th>
                <th>Total protein intake</th>
                <th>Daily recomended intake</th>
                <th>Percentage</th>
                <th>Protein left</th>
            </tr>
            <tr ng-repeat="days in rawData">
                <td>
                    <div class="small">{{days.summary.date}}</div>
                </td>
                <td>
                    <div class="small">{{days.summary.total}} g</div>
                </td>
                <td>
                    <div class="small">{{days.summary.daily}} g</div>
                </td>
                <td>
                    <div class="small">{{days.summary.percentage}} %</div>
                </td>
                <td>
                    <div class="small">{{days.summary.left}} g</div>
                </td>
            </tr>
            <tr id="green"  ng-show="checkArray()">
                <th>Date</th>   
                <th>Total protein intake</th>
                <th>Daily recomended intake</th>
                <th>Percentage</th>
                <th>Protein left</th>
            </tr>
            <tr ng-model ="average" id="green" ng-show="checkArray()">
                <td>
                    <div class="small">This Week</div>
                </td>
                <td>
                    <div class="small">{{average.total}} g</div>
                </td>
                <td>
                    <div class="small">{{average.daily}} g</div>
                </td>
                <td>
                    <div class="small">{{average.percentage}} %</div>
                </td>
                <td>
                    <div class="small">{{average.left}} g</div>
                </td>
            </tr>
        </table>
    </div>
</div>